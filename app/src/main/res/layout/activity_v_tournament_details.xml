<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vtouDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addTournamentDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="700dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="#A8FFBB00">

                <TextView
                    android:id="@+id/textViewvt"
                    android:layout_width="230dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="25dp"
                    android:background="#B3FFFFFF"
                    android:text="View Tournament Details"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/teditNamevt"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="110dp"
                    android:background="#B3FFFFFF"
                    android:hint="Tournament Name" />

                <EditText
                    android:id="@+id/teditCountryvt"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="160dp"
                    android:background="#B3FFFFFF"
                    android:hint="Country" />

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="210dp"
                    app:cardBackgroundColor="#B5FFFFFF">

                    <TextView
                        android:id="@+id/datetovtvt"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="45dp"
                        android:background="#5CFFEB3B"
                        android:drawableRight="@android:drawable/ic_menu_my_calendar"
                        android:ems="10"
                        android:hint="To"
                        android:inputType="date" />

                    <TextView
                        android:id="@+id/textView2V"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="@string/date"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/datefromvtvt"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="45dp"
                        android:background="#5CFFEB3B"
                        android:drawableRight="@android:drawable/ic_menu_my_calendar"
                        android:ems="10"
                        android:hint="From"
                        android:inputType="date" />
                </androidx.cardview.widget.CardView>

                <EditText
                    android:id="@+id/teditNumvt"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="325dp"
                    android:background="#A4FFFFFF"
                    android:ems="2"
                    android:hint="Number Of Matches"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/spinnerV"
                    android:layout_width="350dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="375dp"
                    android:background="#B2FFFFFF"
                    android:entries="@array/teams_array" />

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="160dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="430dp"
                    app:cardBackgroundColor="#B2FFFFFF">

                    <TextView
                        android:id="@+id/textView5V"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="  Teams" />

                    <CheckBox
                        android:id="@+id/checkBoxV"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="35dp"
                        android:text="Team 01"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox2V"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="65dp"
                        android:text="@string/team_02"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox3V"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="95dp"
                        android:text="Team 03"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox4V"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="125dp"
                        android:text="@string/team_04"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox5V"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="35dp"
                        android:text="Team 05"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox6V"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="65dp"
                        android:text="@string/team_06"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox7V"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="95dp"
                        android:text="@string/team_07"
                        android:textSize="12sp" />

                    <CheckBox
                        android:id="@+id/checkBox8V"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="125dp"
                        android:text="@string/team_08"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>


                <Button
                    android:id="@+id/btnTEditV"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="630dp"
                    android:background="#D59DD10C"
                    android:elevation="3dp"
                    android:text="UPDATE" />


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>