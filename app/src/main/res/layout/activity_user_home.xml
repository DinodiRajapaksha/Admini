<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="630dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:animateLayoutChanges="true"
                    android:background="#00193C"
                    android:outlineAmbientShadowColor="#5A1515">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="20dp"
                        android:text="Dashboard"
                        android:textColor="#EBBF61"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="7dp"
                        app:srcCompat="@drawable/logo" />

                </RelativeLayout>

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/caro"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="0dp"
                    app:fillColor="#FFFFFF"
                    app:pageColor="#000000"
                    app:slideInterval="3000"
                    app:radius="6dp"
                    app:strokeColor="#FF777777"
                    app:strokeWidth="1dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" />

                        </LinearLayout>

                </com.synnapps.carouselview.CarouselView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/ongoingmatch"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="380dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="8dp"
                    android:background="#1048A4">

                    <LinearLayout
                        android:id="@+id/ongoingFav"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:background="#1048A4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="75dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="@string/tournamentname"
                            android:textColor="#FFFFFE"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="5dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="55dp"
                                            android:layout_height="42dp"
                                            android:src="@drawable/slicon" />


                                    </LinearLayout>

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/score1"
                                    android:textColor="#C9DCDA"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="5dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="55dp"
                                            android:layout_height="42dp"
                                            android:src="@drawable/ausicon" />


                                    </LinearLayout>

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/score2"
                                    android:textColor="#C9DCDA"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="100dp"
                                android:text="@string/des"
                                android:textSize="18dp"
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/des2"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="200dp"
                                android:text="@string/des3"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="210dp"
                        android:background="#18D90A"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="380dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="8dp"
                    android:background="#1048A4">

                    <LinearLayout
                        android:id="@+id/ongoingFav2"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:background="#1048A4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="75dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text="England VS New Zealand"
                            android:textColor="#FFFFFE"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="5dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="55dp"
                                            android:layout_height="42dp"
                                            android:src="@drawable/engicon" />


                                    </LinearLayout>

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="256(90.2)"
                                    android:textColor="#C9DCDA"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="75dp"
                                    android:layout_height="50dp"
                                    android:layout_marginTop="5dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="55dp"
                                            android:layout_height="42dp"
                                            android:src="@drawable/indicon" />


                                    </LinearLayout>

                                </RelativeLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="56(16.2)"
                                    android:textColor="#C9DCDA"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="100dp"
                                android:text="Inida trail by 200 runs"
                                android:textSize="18dp"
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="England bowling"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="150dp"
                                android:text="India batting"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="210dp"
                        android:background="#18D90A"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/favteams"
                android:textColor="#000000"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="70dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/addteams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EECE53"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/slicon" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="67dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ausicon" />



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" />


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/saicon" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/engicon" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/indicon" />


                    <!--   <ImageView
                           android:id="@+id/addFav"
                           android:layout_width="50dp"
                           android:layout_height="60dp"
                           android:layout_marginTop="5dp"
                           android:src="@drawable/plus3" />-->


                </LinearLayout>

            </HorizontalScrollView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
</ScrollView>

            <RelativeLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottomBarNav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:itemBackground="@color/colorPrimaryDark"
                    app:itemIconTint="@color/colorPrimary"
                    app:itemRippleColor="#FFC107"
                    app:layout_behavior="com.mypackage.BottomNavigationBehavior"
                    android:layout_gravity="bottom"
                    app:menu="@menu/bottom_user" />

            </RelativeLayout>



</RelativeLayout>