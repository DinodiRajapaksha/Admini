<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bw"
    tools:context=".tournaments.tournament.addUnMatch">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="571dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="598dp">

                <EditText
                    android:id="@+id/mTeam2"
                    android:text="Team 2"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:background="#757E1D"
                    android:outlineAmbientShadowColor="#752C2C"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.566"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.636" />

                <EditText
                    android:id="@+id/mTeam1"
                    android:text="Team 1"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:background="#8A9521"
                    android:outlineAmbientShadowColor="#752C2C"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.537" />

                <EditText
                    android:id="@+id/mType"
                    android:text="Type"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:background="#C6D812"
                    android:outlineAmbientShadowColor="#752C2C"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.566"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.345" />

                <EditText
                    android:id="@+id/mStadium"
                    android:text="Stadium"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:background="#CDDC39"
                    android:outlineAmbientShadowColor="#752C2C"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.25" />

                <EditText
                    android:id="@+id/mid"
                    android:text="Name"
                    android:layout_width="320dp"
                    android:layout_height="40dp"
                    android:background="#ABCDDC39"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:outlineAmbientShadowColor="#752C2C"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.533"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.155" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:outlineProvider="none"
                    app:cardBackgroundColor="#FFFFFF">

                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_msub"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="52dp"
                    android:background="#FFC107"
                    android:text="Submit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mTeam2" />

                <TextView
                    android:id="@+id/mDate"
                    android:layout_width="319dp"
                    android:layout_height="40dp"
                    android:background="#AEBD17"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.548"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.444" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>