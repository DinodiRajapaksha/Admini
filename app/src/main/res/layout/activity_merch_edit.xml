<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MerchEdit">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="20dp"
        android:background="#EDC31F"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDC31F"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="#FFE57F"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="309dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="60dp"
                    android:fontFamily="@font/roboto_black"
                    android:text="@string/title"
                    android:textAlignment="center"
                    android:textColor="#0A0A0A"
                    android:textColorHint="#0A0A0A"
                    android:textSize="25dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/merchImageAdd"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@android:drawable/ic_menu_add" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="#FFE57F"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/TourName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/tourname"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="#FFE57F"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/matchID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/matchid"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="#FFE57F"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/merchItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/merchitemname"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="#FFE57F"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/itemQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/merchItemQty"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="#FFE57F"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/itemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/merchUnitPrice"
                    android:inputType="textPersonName"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUpdateMerch"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="17dp"
            android:background="#1F59BA"
            android:clickable="true"
            android:text="@string/btnUpdateMerch"
            android:textColor="#FCFCFC" />

        <Button
            android:id="@+id/btnUpdateCancelMerch"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="#F52D1B"
            android:clickable="true"
            android:text="@string/btncancelMerch"
            android:textColor="#FCFCFC" />
    </LinearLayout>



</LinearLayout>